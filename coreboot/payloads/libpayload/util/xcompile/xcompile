TMPFILE=""

die() {
	echo "ERROR: $*" >&2
	exit 1
}

clean_up() {
	if [ -n "$TMPFILE" ]; then
		rm -f "$TMPFILE" "$TMPFILE.c" "$TMPFILE.o"
	fi
}

program_exists() {
	type "$1" >/dev/null 2>&1
}

testcc() {
	local tmp_c="$TMPFILE.c"
	local tmp_o="$TMPFILE.o"
	rm -f "$tmp_c" "$tmp_o"
	echo "_start(void) {}" >"$tmp_c"
	"$1" -nostdinc -nostdlib -Werror $2 "$tmp_c" -o "$tmp_o" >/dev/null 2>&1
}

testas() {
	local gccprefixes="$1"
	local twidth="$2"
	local arch="$3"
	local use_dash_twidth="$4"
	local obj_file="$TMPFILE.o"
	local full_arch="elf$twidth-$arch"

	rm -f "$obj_file"
	[ -n "$use_dash_twidth" ] && use_dash_twidth="--$twidth"
	${gccprefixes}as $use_dash_twidth -o "$obj_file" $TMPFILE 2>/dev/null ||
		return 1

	# Check output content type.
	local obj_type="$(${gccprefixes}objdump -p $obj_file)"
	local obj_arch="$(expr "$obj_type" : '.*format \(.[a-z0-9-]*\)')"
	[ "$obj_arch" = "$full_arch" ] || return 1

	# Architecture matched.
	GCCPREFIX="$gccprefixes"

	if [ -z "$use_dash_twidth" ]; then
		ASFLAGS=""
		CFLAGS=""
		LDFLAGS=""
	else
		ASFLAGS="--$twidth"
		CFLAGS="-m$twidth"
		LDFLAGS="-b $full_arch"

	fi

	# Special parameters only available in dash_twidth mode.
	[ -n "$use_dash_twidth" ] && case "$full_arch" in
		"elf32-i386" )
			LDFLAGS="$LDFLAGS -melf_i386"
			CFLAGS="$CFLAGS -Wl,-b,elf32-i386 -Wl,-melf_i386"
			;;
	esac

	return 0
}

detect_special_flags() {
	local architecture="$1"
	# GCC 4.6 is much more picky about unused variables.
	# Turn off it's warnings for now:
	testcc "$CC"   "$CFLAGS -Wno-unused-but-set-variable " &&
		CFLAGS="$CFLAGS -Wno-unused-but-set-variable "

	# Use bfd linker instead of gold if available:
	testcc "$CC"   "$CFLAGS -fuse-ld=bfd" &&
		CFLAGS="$CFLAGS -fuse-ld=bfd" && LINKER_SUFFIX='.bfd'

	testcc "$CC"   "$CFLAGS -Wa,--divide" &&
		CFLAGS="$CFLAGS -Wa,--divide"
	testcc "$CC"   "$CFLAGS -fno-stack-protector"&&
		CFLAGS="$CFLAGS -fno-stack-protector"
	testcc "$CC"   "$CFLAGS -Wl,--build-id=none" &&
		CFLAGS="$CFLAGS -Wl,--build-id=none"

	case "$architecture" in
	arm )
		;;
	arm64 )
		;;
	esac
}

report_arch_toolchain() {
	cat <<EOF
# elf${TWIDTH}-${TBFDARCH} toolchain (${GCCPREFIX}gcc)
CC_${TARCH}:=${GCCPREFIX}gcc ${CFLAGS}
AS_${TARCH}:=${GCCPREFIX}as ${ASFLAGS}
LD_${TARCH}:=${GCCPREFIX}ld${LINKER_SUFFIX} ${LDFLAGS}
NM_${TARCH}:=${GCCPREFIX}nm
OBJCOPY_${TARCH}:=${GCCPREFIX}objcopy
OBJDUMP_${TARCH}:=${GCCPREFIX}objdump
READELF_${TARCH}:=${GCCPREFIX}readelf
STRIP_${TARCH}:=${GCCPREFIX}strip
AR_${TARCH}:=${GCCPREFIX}ar

EOF
}

# Create temporary file(s).
TMPFILE="$(mktemp /tmp/temp.XXXX 2>/dev/null || echo /tmp/temp.78gOIUGz)"
touch "$TMPFILE"
trap clean_up EXIT

# Architecture definition (only ARM and ARM64 are needed)
SUPPORTED_ARCHITECTURE="arm arm64"

# ARM Architecture
TARCH_arm="arm"
TBFDARCH_arm="littlearm"
TCLIST_arm="armv7a arm"
TWIDTH_arm="32"

# ARM64 Architecture
TARCH_arm64="arm64"
TBFDARCH_arm64="littleaarch64"
TCLIST_arm64="aarch64"
TWIDTH_arm64="64"

# Base path for cross-compiler toolchains
# From payloads/libpayload/, ../../ points to coreboot root
XGCCPATH=${1:-"`pwd`/../../util/crossgcc/xgcc/"}

# Linaro GCC toolchain bin directories
LINARO_ARM_BIN="${XGCCPATH}gcc-linaro-4.9.4-2017.01-x86_64_arm-eabi/bin/"
LINARO_AARCH64_BIN="${XGCCPATH}gcc-linaro-4.9.4-2017.01-x86_64_aarch64-elf/bin/"

# Derive crossgcc Makefile directory from XGCCPATH (strip trailing xgcc/)
CROSSGCC_DIR="$(dirname "${XGCCPATH%/}")"

# Flag to avoid redundant download attempts
DOWNLOAD_ATTEMPTED=0

# Function: search for a toolchain for the current architecture.
# Uses global variables: GCCPREFIX, TBFDARCHS, TCLIST, TWIDTH, XGCCPATH,
#                        LINARO_ARM_BIN, LINARO_AARCH64_BIN
# Sets global: GCCPREFIX, TBFDARCH (needed by report_arch_toolchain)
search_toolchain() {
	local architecture="$1"
	GCCPREFIX="invalid"

	local search="$(eval echo \$CROSS_COMPILE_$architecture 2>/dev/null)"
	search="$search $CROSS_COMPILE"

	# Add Linaro-specific toolchain paths first (highest priority)
	case "$architecture" in
		arm)
			search="$search ${LINARO_ARM_BIN}arm-eabi-"
			;;
		arm64)
			search="$search ${LINARO_AARCH64_BIN}aarch64-elf-"
			;;
	esac

	# Add generic search paths
	for toolchain in $TCLIST; do
		search="$search ${XGCCPATH}bin/$toolchain-elf-"
		search="$search $toolchain-elf-"
		search="$search ${XGCCPATH}bin/$toolchain-eabi-"
		search="$search $toolchain-eabi-"
	done
	echo "# $architecture TARCH_SEARCH=$search"

	# Search toolchain by checking assembler capability.
	for TBFDARCH in $TBFDARCHS; do
		for gccprefixes in $search ""; do
			program_exists "${gccprefixes}as" || continue
			testas "$gccprefixes" "$TWIDTH" "$TBFDARCH" "" && break
			testas "$gccprefixes" "$TWIDTH" "$TBFDARCH" "TRUE" && break
		done
		[ "$GCCPREFIX" = "invalid" ] || break
	done
}

# This loops over all supported architectures.
for architecture in $SUPPORTED_ARCHITECTURE; do
	TARCH="$(eval echo \$TARCH_$architecture)"
	TBFDARCHS="$(eval echo \$TBFDARCH_$architecture)"
	TCLIST="$(eval echo \$TCLIST_$architecture)"
	TWIDTH="$(eval echo \$TWIDTH_$architecture)"
	[ -z "$TARCH" -o -z "$TCLIST" -o -z "$TWIDTH" ] &&
		die "Missing architecture definition for $architecture."

	# First attempt to find the toolchain
	search_toolchain "$architecture"

	# If not found, try to download via crossgcc Makefile and retry
	if [ "$GCCPREFIX" = "invalid" ]; then
		if [ "$DOWNLOAD_ATTEMPTED" -eq 0 ] && [ -f "${CROSSGCC_DIR}/Makefile" ]; then
			echo "No suitable GCC for $architecture. Downloading Linaro toolchain..." >&2
			make -C "${CROSSGCC_DIR}" >&2
			if [ $? -eq 0 ]; then
				DOWNLOAD_ATTEMPTED=1
				echo "Download complete. Retrying toolchain search for $architecture..." >&2
				search_toolchain "$architecture"
			else
				echo "ERROR: Failed to download toolchain." >&2
			fi
		elif [ "$DOWNLOAD_ATTEMPTED" -eq 1 ]; then
			# Already downloaded once, just retry (covers second arch after download)
			echo "Retrying toolchain search for $architecture after previous download..." >&2
			search_toolchain "$architecture"
		fi
	fi

	if [ "$GCCPREFIX" = "invalid" ]; then
		echo "Warning: no suitable GCC for $architecture." >&2
		continue
	fi
	CC="${GCCPREFIX}"gcc

	detect_special_flags "$architecture"
	report_arch_toolchain
done

IASL=iasl

if program_exists gcc; then
	HOSTCC=gcc
else
	HOSTCC=cc
fi

cat <<EOF
IASL:=${IASL}

# native toolchain
HOSTCC:=${HOSTCC}
EOF
